<?xml version="1.0"?>
<robot name="simple_tray">

  <!-- One single tray link: directly attach this to the robot -->
  <link name="tray_base">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.0015" iyz="0" izz="0.002"/>
    </inertial>

    <!-- Plate -->
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><box size="0.16 0.24 0.01"/></geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><box size="0.16 0.24 0.01"/></geometry>
      <material name="gray"><color rgba="0.6 0.6 0.6 1.0"/></material>
    </visual>

    <!-- +X rim -->
    <collision>
      <origin xyz="0.08 0 0.01" rpy="0 0 0"/>
      <geometry><box size="0.02 0.24 0.01"/></geometry>
    </collision>
    <visual>
      <origin xyz="0.08 0 0.01" rpy="0 0 0"/>
      <geometry><box size="0.02 0.24 0.01"/></geometry>
      <material name="rim"><color rgba="0.4 0.4 0.4 1"/></material>
    </visual>

    <!-- -X rim -->
    <collision>
      <origin xyz="-0.08 0 0.01" rpy="0 0 0"/>
      <geometry><box size="0.02 0.24 0.01"/></geometry>
    </collision>
    <visual>
      <origin xyz="-0.08 0 0.01" rpy="0 0 0"/>
      <geometry><box size="0.02 0.24 0.01"/></geometry>
    </visual>

    <!-- +Y rim -->
    <collision>
      <origin xyz="0 0.12 0.01" rpy="0 0 0"/>
      <geometry><box size="0.16 0.02 0.01"/></geometry>
    </collision>
    <visual>
      <origin xyz="0 0.12 0.01" rpy="0 0 0"/>
      <geometry><box size="0.16 0.02 0.01"/></geometry>
    </visual>

    <!-- -Y rim -->
    <collision>
      <origin xyz="0 -0.12 0.01" rpy="0 0 0"/>
      <geometry><box size="0.16 0.02 0.01"/></geometry>
    </collision>
    <visual>
      <origin xyz="0 -0.12 0.01" rpy="0 0 0"/>
      <geometry><box size="0.16 0.02 0.01"/></geometry>
    </visual>
  </link>

</robot>